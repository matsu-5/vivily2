<div class="top_image">
  <section class="container clearfix">
	<div class="row">
		<div class="col-md-8 col-md-offset-2 new-container">
			<h1 class="new-movie text-center">New Movie</h1>
			<hr>
			<div class="col-md-9 col-md-offset-4">
			  <div class = "row">
				<%= form_for @movie,:url => {:action => :create} do |f|%>
			      <b>Movie Title</b>
				    <%= f.text_field :title, class:"form-control", placeholder: "Movie Title" %>
				  <b>Image</b>
					<%= f.attachment_field :image %>
				  <b>Movie</b>
					<%= f.file_field :movie %>
			    <div class="new-actions">
				  <%= f.submit "保存", class:"btn btn-dark btn-lg btn-block" %>
				</div>
				<% end %>
				  <div class="col-md-9 col-md-offset-2">
                    <div class ="back">
                      <%= link_to 'Back', admin_homes_movie_path, class: "btn-default" %>
                    </div>
                  </div>
                </div>
			  </div>
			</div>
		</div>
	</div>
  </section>
</div>
